<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ganpengyu.ronganxin.dao.SysResourceDao">
    <resultMap id="BaseResultMap" type="com.ganpengyu.ronganxin.model.SysResource">
        <!--@mbg.generated-->
        <!--@Table sys_resource-->
        <id column="id" property="id"/>
        <result column="code" property="code"/>
        <result column="name" property="name"/>
        <result column="type" property="type"/>
        <result column="parent_id" property="parentId"/>
        <result column="path" property="path"/>
        <result column="component" property="component"/>
        <result column="icon" property="icon"/>
        <result column="sort" property="sort"/>
        <result column="is_hidden" property="isHidden"/>
        <result column="is_keep_alive" property="isKeepAlive"/>
        <result column="is_external_link" property="isExternalLink"/>
        <result column="is_deleted" property="isDeleted"/>
        <result column="create_time" property="createTime"/>
        <result column="create_by" property="createBy"/>
        <result column="update_time" property="updateTime"/>
        <result column="update_by" property="updateBy"/>
    </resultMap>
    <sql id="Base_Column_List">
        <!--@mbg.generated-->
        id, code, `name`, `type`, parent_id, `path`, component, icon, sort, is_hidden, is_keep_alive,
        is_external_link, is_deleted, create_time, create_by, update_time, update_by
    </sql>

    <select id="findResourceCodesByUserId" resultType="string">
        SELECT DISTINCT r.code
        FROM sys_resource r
                 INNER JOIN sys_role_resource rr ON r.id = rr.resource_id
                 INNER JOIN sys_user_role ur ON rr.role_id = ur.role_id
        WHERE ur.user_id = #{userId}
          AND r.is_deleted = 0
    </select>

    <select id="findResourceByRoleId" resultMap="BaseResultMap">
        SELECT r.id,
               r.code,
               r.`name`,
               r.`type`,
               r.parent_id,
               r.`path`,
               r.component,
               r.icon,
               r.sort,
               r.is_hidden,
               r.is_keep_alive,
               r.is_external_link,
               r.is_deleted,
               r.create_time,
               r.create_by,
               r.update_time,
               r.update_by
        FROM sys_resource r
                 INNER JOIN sys_role_resource rr ON r.id = rr.resource_id
        WHERE rr.role_id = #{roleId}
          AND r.is_deleted = 0
    </select>
</mapper>